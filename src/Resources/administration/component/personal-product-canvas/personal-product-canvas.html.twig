{% block personal_product_attributes %}
    <div v-if="!isLoading" class="personal-product-canvas">
        <sw-switch-field
            label="Product can be customized"
            v-model="isCustomizable">
        </sw-switch-field>

        <sw-container columns="2fr 1fr" v-if="isCustomizable || false">
            <div class="media-canvas-outer">
                <div class="media-canvas-inner">
{#                    <img :src="product.media.first().media.url" class="cover">#}
                    <canvas ref="canvas" class="canvas" @click="onClickCanvas"></canvas>
                </div>
            </div>

            <div>
                <sw-number-field
                    label="Canvas X0"
                    v-model="product.customFields.personal_product_canvasX0">
                </sw-number-field>

                <sw-number-field
                    label="Canvas Y0"
                    v-model="product.customFields.personal_product_canvasY0">
                </sw-number-field>

                <sw-number-field
                    label="Canvas X1"
                    v-model="product.customFields.personal_product_canvasX1">
                </sw-number-field>

                <sw-number-field
                    label="Canvas Y1"
                    v-model="product.customFields.personal_product_canvasY1">
                </sw-number-field>

                <sw-button @click="onClickReset" variant="primary">
                    Reset
                </sw-button>
            </div>
        </sw-container>




    </div>
{% endblock %}
